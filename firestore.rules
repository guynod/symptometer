rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Symptoms collection rules
    match /symptoms/{symptomId} {
      allow read: if true;  // Anyone can read symptoms
      allow create: if request.resource.data.keys().hasAll(['name', 'bodyPart', 'createdAt', 'updatedAt', 'isActive'])
                   && request.resource.data.isActive is bool
                   && (!request.resource.data.keys().hasAny(['notes']) || request.resource.data.notes is string);
      allow update: if request.resource.data.diff(resource.data).affectedKeys()
                   .hasAny(['name', 'bodyPart', 'updatedAt', 'isActive', 'notes']);
      allow delete: if true;  // Allow delete for development
    }

    // Frequently used body parts collection
    match /frequently-used-body-parts/{bodyPartId} {
      allow read, write: if true;  // Allow all operations for development
    }

    // Frequently used symptoms collection
    match /frequently-used-symptoms/{symptomId} {
      allow read, write: if true;  // Allow all operations for development
    }

    // Deny access to other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 